<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    android:layout_height="205dp"
    android:id="@+id/recycler_item_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_color">

        <ImageView
            android:id="@+id/recycler_item_image"
            android:layout_width="@dimen/image_large_size"
            android:layout_height="@dimen/image_large_size"
            android:src="@drawable/icon_sun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/recycler_item_weather_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/recycler_item_title"
            android:text="Nuageux"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_45"
            android:layout_marginStart="@dimen/space_16"/>

        <TextView
            android:id="@+id/recycler_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Washington DC, USA"
            style="@style/subtitle_text"
            app:layout_constraintStart_toStartOf="@id/recycler_item_weather_state"
            app:layout_constraintTop_toBottomOf="@id/recycler_item_weather_state"
            android:layout_marginTop="@dimen/space_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>