<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/start_background_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/MyTheme</item>
    </style>

    <style name="ProgressBarColor">
        <item name="color">@color/progressbar_color</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="textFillColor">@color/black</item>
        <item name="textOutlineColor">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar" />

</resources>